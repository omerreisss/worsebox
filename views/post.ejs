<div class="post">
    <h2><%= post.title %></h2>
    <p><%= post.content %></p>
    <% if (post.image) { %>
        <img src="/uploads/<%= post.image %>" style="max-width:100%;">
    <% } %>
</div>

<h3>Yorumlar</h3>
<% comments.forEach(comment => { %>
    <div class="post">
        <p><%= comment.content %></p>
    </div>
<% }) %>

<form method="POST" action="/post/<%= post.id %>/comment" enctype="multipart/form-data">
    <textarea name="content" placeholder="Yorum yaz..." required></textarea>
    <input type="file" name="image">
    <button type="submit">Yorum Yap</button>
</form>

